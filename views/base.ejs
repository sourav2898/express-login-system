<%- include('header') -%>


<div class="text-center center-div" id="login">
    <div class="container border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">
                Login System
            </h2>
            <span>Login for existing user</span>
            <% if(locals.logout){ %>
                <p class="font-weight-bold logout">
                    <%= logout %>
                </p>
            <%}%>
        </div>
        <form action="/route/login" method="POST">
            <div class="form-group mb-3">
                <input type="email" class="form-control" placeholder="email" name="email">
                <small class="form-text text-muted text-left">Registered email address</small>
            </div>
            <div class="form-group mb-3">
                <input type="password" class="form-control" placeholder="password" name="password">
            </div>
            <button type="submit" class="btn btn-success rounded-pill">Submit</button>
        </form>
    </div>
</div>
    
    
<%- include('footer') -%>
